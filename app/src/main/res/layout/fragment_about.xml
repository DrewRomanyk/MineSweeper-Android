<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.AboutFragment"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:id="@+id/about_header"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:text="@string/dialog_about_title"
           android:textAppearance="@style/TextAppearance.Minesweeper.Subhead" />

       <TextView
           android:id="@+id/about_label"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:text="@string/dialog_about_message"
           android:textColor="?android:textColorPrimary" />
       <Button
           android:id="@+id/send_feedback_button"
           style="@style/Widget.Minesweeper.AboutButtons"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           android:text="Send feedback" />
       <Button
           android:id="@+id/remove_ads"
           style="@style/Widget.Minesweeper.AboutButtons"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Remove ads" />
       <Button
           android:id="@+id/terms_of_service_button"
           style="@style/Widget.Minesweeper.AboutButtons"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Terms of service" />
       <Button
           android:id="@+id/privacy_policy_button"
           style="@style/Widget.Minesweeper.AboutButtons"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Privacy policy" />
       <Button
           android:id="@+id/open_source_licenses_button"
           style="@style/Widget.Minesweeper.AboutButtons"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Open source licenses" />
   </LinearLayout>

</androidx.core.widget.NestedScrollView>
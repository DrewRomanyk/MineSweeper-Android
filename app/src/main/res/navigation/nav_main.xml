<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/bottomNavFragment"
>
    <fragment
        android:id="@+id/bottomNavFragment"
        android:name="app.drewromanyk.com.minesweeper.ui.BottomNavFragment"
        android:label="Home"
        tools:layout="@layout/fragment_bottom_nav"
    >
        <action
            android:id="@+id/action_main_to_game"
            app:destination="@id/gameFragment"
        />
    </fragment>

    <fragment
        android:id="@+id/gameFragment"
        android:name="app.drewromanyk.com.minesweeper.ui.GameFragment"
        android:label="Game"
        tools:layout="@layout/fragment_game"
    >
        <argument
            android:name="gameDifficulty"
            android:defaultValue="EASY"
            app:argType="string"
        />
    </fragment>
</navigation>